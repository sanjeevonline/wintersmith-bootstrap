!!!
html
  include partials/header

  body
    div.navbar.navbar-fixed-top
      div.navbar-inner
        div.container
          a(data-toggle='collapse', data-target='.nav-collapse').btn.btn-navbar
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a(href='#').brand wintersmith-bootstrap
          ul.nav
            - var obj = { 'index':'Home', 'about':'About' }
              - each val, key in obj
                - if (page.metadata.id == key)
                  li.active
                    a(href='#{key}.html') #{val}
                - else            
                  li
                    a(href='#{key}.html') #{val}

    div.container!= page.html
      include partials/footer
  
    include partials/scripts