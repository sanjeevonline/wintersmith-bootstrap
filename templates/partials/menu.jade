div.navbar.navbar-fixed-top
      div.navbar-inner
        div.container
          a(data-toggle='collapse', data-target='.nav-collapse').btn.btn-navbar
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a(href='#').brand wintersmith-bootstrap
          ul.nav
            - var menu_items = _.chain(contents._.pages).map(function(v){return {'url':v.url, 'title':v.metadata.menu};}).sortBy('url').value();
              - each item in menu_items
                - if (page.metadata.menu == item.title)
                  li.active
                    a(href= item.url) #{item.title}
                - else            
                  li
                    a(href= item.url) #{item.title}